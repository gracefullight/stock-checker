{
  "name": "stock-checker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts predict --ticker=ABCL,BE,BMNR,CIEN,DLO,DNA,GEV,GLW,GOOGL,INTC,IONQ,OPEN,PLTR,POET,TSLA,UPST --sort=asc",
    "start:pretty": "bun src/index.ts predict --ticker=ABCL,BE,BMNR,CIEN,DLO,DNA,GEV,GLW,GOOGL,INTC,IONQ,OPEN,PLTR,POET,TSLA,UPST --sort=asc | pino-pretty",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write . --unsafe",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write . --unsafe",
    "optimize": "bun src/index.ts optimize",
    "learn": "bun src/index.ts learn"
  },
  "engines": {
    "node": "24",
    "bun": "1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "commander": "^14.0.2",
    "csv-parse": "^6.1.0",
    "es-toolkit": "^1.39.10",
    "luxon": "^3.7.2",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "technicalindicators": "^3.1.0",
    "yahoo-finance2": "^3.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@gracefullight/biome-plugin": "^0.2.2",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24",
    "@vitest/ui": "^4.0.18",
    "msw": "^2.12.7",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
