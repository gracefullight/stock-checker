    "yahoo-finance2": "^2.13.3"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.17.1",
    "@vitest/ui": "^4.0.18",
    "msw": "^2.12.7",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^4.0.18"
